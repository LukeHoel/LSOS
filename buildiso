#Build Assembly bootstrapper
i686-elf-as src/kernel/boot.s -o build/boot.o
#Build high level kernel (c++)
i686-elf-g++ -c src/kernel/kernel.cpp -o build/kernel.o -ffreestanding -O2 -Wall -Wextra -fno-exceptions -fno-rtti
#Build linker
i686-elf-gcc -T src/linker.ld -o build/myos.bin -ffreestanding -O2 -nostdlib build/boot.o build/kernel.o -lgcc
#grub multiboot stuff
cd build
if grub-file --is-x86-multiboot myos.bin; then
  echo multiboot confirmed
else
  echo the file is not multiboot
fi
#do some iso building, dropping iso in home directory
cp myos.bin isodir/boot/myos.bin
cp grub.cfg isodir/boot/grub/grub.cfg
if [ -z "$ISODIR" ]
then
	grub-mkrescue -o ~/myos.iso isodir
else	
	grub-mkrescue -o $ISODIR/myos.iso isodir
fi

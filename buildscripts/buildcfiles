#set up colors for output
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m' # No Color

i686-elf-gcc -c src/kernel/kernel.c -o build/kernel.o -std=gnu99 -ffreestanding -O2 -Wall -Wextra

if [ $? -eq 0 ]; then
    echo -e "${GREEN}C files OK${NC}"
else
    echo -e "${RED}C files FAILED${NC}"
    exit 1
fi

